    "#generate all factors of a number\n",
    "def get_factors(num):\n",
    "    return [i for i in range(1, num + 1) if num % i == 0]\n",
    "number = int(input(\"Enter a number: \"))\n",
    "factors = get_factors(number)\n",
    "print(\"Factors of\", number, \":\", factors)"
   ]
